{
  "manifest_version": 3,
  "name": "MyCase Tools",
  "version": "1.0",
  "description": "Adds various tools to MyCase.",
  "permissions": [],
  "host_permissions": [
    "https://public.courts.in.gov/mycase/*",
    "https://public.courts.in.gov/AttorneyDashboard/*",
    "https://public.courts.in.gov/Portal/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://public.courts.in.gov/mycase/*",
        "https://public.courts.in.gov/AttorneyDashboard/*",
        "https://public.courts.in.gov/Portal/*"
      ],
      "js": ["content.js"]
    }
  ],
   "icons": {
       "200": "icon.png"
     }
}
